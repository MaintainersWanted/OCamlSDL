all:
	@(cd src && make)
	@(cd samples && make)

clean:
	@(cd src && make clean)
	@(cd lib && make clean)
	@(cd samples && make clean)

distclean:
	@(cd src && make distclean)
	@(cd samples && make distclean)
	@(cd lib && make distclean)
	@rm -f config.cache config.log config.status Makefile makefile.toplevel

install:
	@(cd lib && make install)

uninstall:
	@(cd lib && make uninstall)

include makefile.toplevel
