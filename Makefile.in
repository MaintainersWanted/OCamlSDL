CC = 		@CC@ 
CFLAGS =	@CFLAGS@ -Wall # -g -pg #-O3 -pipe -pedantic -m486 
CAMLC =		@OCAMLC@
CAMLOPT =	@OCAMLOPT@
CAMLTOP =	@OCAMLMKTOP@
CAMLDEP =	@OCAMLDEP@
MLFLAGS =
OMLFLAGS =	-unsafe -inline 10 #-ccopt -pg -p

CLIBS =		@LIBS@ @MATHLIB@
MLLIBS =	-cclib "$(CLIBS)" 
LIBDIR =

C_OBJS = 	sdl_stub.o sdlcdrom_stub.o sdltimer_stub.o sdlvideo_stub.o\
		sdlevent_stub.o sdlloader_stub.o sdlttf_stub.o sdlmixer_stub.o

ML_OBJS	=	sdl.cmo sdlcdrom.cmo sdltimer.cmo \
		sdlvideo.cmo sdlevent.cmo sdlloader.cmo sdlttf.cmo sdlmixer.cmo

OPT_OBJS=	sdl.cmx sdlcdrom.cmx sdltimer.cmx \
		sdlvideo.cmx sdlevent.cmx sdlloader.cmx sdlttf.cmx sdlmixer.cmx

OBJS =		$(C_OBJS) $(ML_OBJS)
OOBJS =		$(C_OBJS) $(OPT_OBJS)

TOPLEVEL = 	toplevel
RUNTIME = 	sdlrun
LIBRARY = 	sdl.cma
OLIBRARY = 	sdl.cmxa
CLIBRARY = 	libsdl.a

all: $(TOPLEVEL)

$(TOPLEVEL): $(OBJS)
	$(CAMLTOP) -custom -o $@ $(OBJS) $(MLLIBS)

$(RUNTIME): $(OBJS)
	$(CAMLC) -thread -custom -make_runtime -o $@ unix.cma threads.cma \
	$(OBJS) $(MLLIBS) -cclib -lunix -cclib -lthreads

$(LIBRARY): $(CLIBRARY) $(ML_OBJS)
	$(CAMLC) -linkall -a -o $(LIBRARY) $(ML_OBJS)

$(OLIBRARY): $(CLIBRARY) $(OPT_OBJS)
	$(CAMLOPT) -linkall -a -o $(OLIBRARY) $(OPT_OBJS)

$(CLIBRARY): $(C_OBJS)
	ar cr $(CLIBRARY) $(C_OBJS)
	ranlib $(CLIBRARY)

.SUFFIXES:
.SUFFIXES: .c .o .ml .mli .cmo .cmi

%.cmo : %.ml
	$(CAMLC) -c $(MLFLAGS) $<

%.cmx : %.ml
	$(CAMLOPT) -c $(OMLFLAGS) $<

%.cmi : %.mli
	$(CAMLC) -c $(MLFLAGS) $<

%.o : %.c
	$(CAMLC) -c -ccopt "$(CFLAGS)" $<

distclean:
	rm -f $(TOPLEVEL) $(RUNTIME) *.o *~ *.cm[iox] .depend
	rm -f config.status config.cache config.log Makefile

clean:
	rm -f *.o *~ *.cm[iox] .depend

depend:
	$(CAMLDEP) *.mli *.ml > .depend

.depend: 
	$(CAMLDEP) *.mli *.ml > .depend

include .depend
