CC = 		@CC@ 
CFLAGS =	@CFLAGS@ -Wall #-O3 -pipe -pedantic -m486 
CAMLC =		@OCAMLC@
CAMLOPT =	@OCAMLOPT@
CAMLTOP =	@OCAMLMKTOP@
CAMLDEP =	@OCAMLDEP@
MLFLAGS =

CLIBS =		@LIBS@ @MATHLIB@ -lSDLttf -lttf -lSDL_image 
MLLIBS =	-cclib "$(CLIBS)" 
LIBDIR =

C_OBJS = 	sdl_stub.o sdlcdrom_stub.o sdltimer_stub.o sdlvideo_stub.o\
		sdlevent_stub.o sdlloader_stub.o sdlttf_stub.o

ML_OBJS	=	sdl.cmo sdlcdrom.cmo sdltimer.cmo \
		sdlvideo.cmo sdlevent.cmo sdlloader.cmo sdlttf.cmo

OBJS =		$(C_OBJS) $(ML_OBJS)

TOPLEVEL = 	toplevel
RUNTIME = 	sdlrun

all: $(TOPLEVEL)

$(TOPLEVEL): $(OBJS)
	$(CAMLTOP) -custom -o $@ $(OBJS) $(MLLIBS)

$(RUNTIME): $(OBJS)
	$(CAMLC) -custom -make_runtime -o $@ unix.cma $(OBJS) $(MLLIBS)\
	 -cclib -lunix

.SUFFIXES:
.SUFFIXES: .c .o .ml .mli .cmo .cmi

%.cmo : %.ml
	$(CAMLC) -c $(MLFLAGS) $<

%.cmi : %.mli
	$(CAMLC) -c $(MLFLAGS) $<

%.o : %.c
	$(CAMLC) -c -ccopt "$(CFLAGS)" $<

distclean:
	rm -f $(TOPLEVEL) $(RUNTIME) *.o *~ *.cm[iox] .depend
	rm -f config.status config.cache config.log Makefile

clean:
	rm -f *.o *~ *.cm[iox] .depend

depend:
	$(CAMLDEP) *.mli *.ml > .depend

.depend: 
	$(CAMLDEP) *.mli *.ml > .depend

include .depend
