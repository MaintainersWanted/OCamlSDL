CLIBS =		@LIBS@ @MATHLIB@
MLLIBS =	-cclib "$(CLIBS)"

BIN_DIR =	../bin
LIB_DIR =	../lib

#don't put a space behind the last module
MODULES = 	sdl sdlvideo sdlcdrom sdlevent \
		sdltimer sdlttf sdlmixer sdlloader

STUB_SRCS = 	$(MODULES:=_stub.c) common.c

STUB_OBJS =	$(STUB_SRCS:.c=.o)

ML_OBJS	=	$(MODULES:=.cmo)

CMI	=	$(MODULES:=.cmi)

MLI	=	$(MODULES:=.mli)

C_OBJS = 	$(ML_OBJS:.cmo=.o)

OPT_OBJS=	$(ML_OBJS:.cmo=.cmx)

OBJS =		$(STUB_OBJS) $(ML_OBJS)
OOBJS =		$(STUB_OBJS) $(OPT_OBJS)

TOPLEVEL = 	$(LIB_DIR)/toplevel
RUNTIME = 	$(BIN_DIR)/sdlrun
LIBRARY = 	$(LIB_DIR)/sdl.cma
OLIBRARY = 	$(LIB_DIR)/sdl.cmxa
CLIBRARY = 	$(LIB_DIR)/libsdlstub.a

all: bin libs instlocal

bin: $(TOPLEVEL)
libs: $(LIBRARY) $(OLIBRARY) $(CLIBRARY) 
test: $(TEST)

$(TOPLEVEL): $(OBJS)
	$(CAMLTOP) -custom -o $@ bigarray.cma $(OBJS) $(MLLIBS)

$(RUNTIME): $(OBJS)
	$(CAMLC) -thread -custom -make_runtime -o $@ unix.cma threads.cma \
	bigarray.cma\
	$(OBJS) $(MLLIBS) -cclib -lunix -cclib -lthreads

$(LIBRARY): $(CLIBRARY) $(ML_OBJS)
	$(CAMLC) -custom -a -o $(LIBRARY) $(ML_OBJS) $(MLLIBS) -cclib -lsdlstub

$(OLIBRARY): $(LIBRARY) $(OPT_OBJS)
	$(CAMLOPT) -a -o $(OLIBRARY) $(OPT_OBJS) -cclib -lsdlstub\
	-ccopt "-lSDL -lSDL_ttf -lSDL_mixer -lpng -lSDL_image"

$(CLIBRARY): $(STUB_OBJS)
	@ar cr $(CLIBRARY) $(STUB_OBJS)
	@ranlib $(CLIBRARY)

instlocal: $(CMI) $(MLI)
	$(CP) $? $(LIB_DIR)

.SUFFIXES: .c .o .ml .mli .cmo .cmi .cmx

%.cmo : %.ml
	$(CAMLC) -c $(MLFLAGS) $<

%.cmx : %.ml
	$(CAMLOPT) -c $(OMLFLAGS) $<

%.cmi : %.mli
	$(CAMLC) -c $(MLFLAGS) $<

%.o : %.c
	$(CAMLC) -c -ccopt "$(CFLAGS)" $<

distclean:
	@rm -f $(CMI) $(C_OBJS) *~ *.cm[iox] .depend
	@rm -f $(STUB_OBJS) $(C_OBJS) *~ *.cm[iox] .depend
	@rm -f Makefile

clean:
	@rm -f $(STUB_OBJS) $(C_OBJS) *~ *.cm[iox] .depend

depend:
	$(CAMLDEP) *.mli *.ml > .depend

.depend: 
	$(CAMLDEP) *.mli *.ml > .depend

include ../makefile.toplevel
include .depend
