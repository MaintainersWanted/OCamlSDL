PREFIX =        @prefix@
CAMLLIBDIR =    @OCAMLLIB@
OCAMLSDLDIR =   @OCAMLSDLDIR@
BINDIR =        $(PREFIX)/bin

INSTALL = 	@INSTALL@
INSTALL_DATA = 	@INSTALL_DATA@

PARTS = @PARTS@

CC =            @CC@
CPPFLAGS =	@CPPFLAGS@ @DEFS@
CFLAGS =	@CFLAGS@ 
CAMLC =		@OCAMLC@
CAMLOPT =	@OCAMLOPT@
CAMLTOP =	@OCAMLMKTOP@
CAMLDEP =	@OCAMLDEP@
CAMLMKLIB =     @OCAMLMKLIB@
CAMLDOC = 	@OCAMLDOC@

MLFLAGS  =
OMLFLAGS =	-unsafe -inline 10

LIBS      =	$(filter -l% -L%,@LIBS@)
CLIBS     =	$(addprefix -cclib ,$(filter -l%,$(LIBS)))
MLLDFLAGS =	$(addprefix -ccopt ,$(filter -L%,$(LIBS)))

DESTDIR =

%.cmo : %.ml
	$(CAMLC) -c $(MLFLAGS) $<

%.cmx : %.ml
	$(CAMLOPT) -c $(OMLFLAGS) $<

%.cmi : %.mli
	$(CAMLC) -c $(MLFLAGS) $<

%.o : %.c
	$(CAMLC) -c -ccopt "$(CPPFLAGS) $(CFLAGS)" $<

ifndef OCAMLMKLIB
%.cma :
	$(CAMLC) -o $@  -a -custom $(CLIBS) $(MLLDFLAGS) $^

%.cmxa :
	$(CAMLOPT) -o $@  -a $(CLIBS) $(MLLDFLAGS) $^

%.a :
	ar crus $@ $^
endif

CLIBRARY =      libsdlstub.a

CMAKELIB = ar cruvs $(CLIBRARY)
OBJSUFFIX = .o
